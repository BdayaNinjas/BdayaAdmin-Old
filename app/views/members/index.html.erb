<% @page_title = "Members List" %>

<div>
  <h2>Members</h2>
  
  <% if(current_member.committee=='HR' && (current_member.role=='Head'||current_member.role=='Vice Head')) %>
  <%= link_to("Add New Member", {:action => 'new'}) %>
  <% end %>

  <div><%= pluralize(@members.size, 'member') %> found</div>
  
  <table summary="Member list">
    <tr>
      <th>Member</th>
      <th>Email</th>
      <th>Semester</th>
      <th>Major</th>
      <th>Committee</th>
      <th>Role</th>
      <% if(current_member.committee=='HR' && (current_member.role=='Head'||current_member.role=='Vice Head')) %>
      <th>Actions</th>
      <% end %>
    </tr>
    <% @members.each do |member| %>
    <tr>
      <td><%= link_to(member.name, {:action => 'show', :id => member.id}) %></td>
      <td><%= member.email %></td>
      <td><%= member.semester %></td>
      <td><%= member.major %></td>
      <td><%= member.committee %></td>
      <td><%= member.role %></td>
      <td>
        <% if(current_member.email==member.email||(current_member.committee=='HR' && (current_member.role=='Head'||current_member.role=='Vice Head'))) %>
          <%= link_to("Edit", {:action => 'edit', :id => member.id}) %>
        <% end %>
        <% if(current_member.email!=member.email&&(current_member.committee=='HR' && (current_member.role=='Head'||current_member.role=='Vice Head')))%>
        <%= link_to("Delete", {:action => 'delete', :id => member.id}) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
