<% @page_title = "Delete Member: #{@member.name}" %>

<%= link_to("<< Back to List", {:action => 'index'}, :class => 'back-link') %>

<div class="member delete">
  <h2>Delete Member</h2>
  
  <%= form_for(:member, :url => {:action => 'destroy', :id => @member.id}) do |f| -%>

    <p>Are you sure you want to permanently delete this member?</p>
  
    <p class="reference-name"><%= @member.name %></p>
  
    <div class="form-buttons">
      <%= submit_tag("Delete Member") %>
    </div>
    
  <% end %>
</div>
