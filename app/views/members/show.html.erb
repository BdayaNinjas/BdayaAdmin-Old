<% @page_title = "Show Member: #{@member.name}" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="member show">
  <h2>Show Member</h2>

  <table summary="Member detail view">
    <tr>
      <th>Name</th>
      <td><%= @member.name %></td>
    </tr>
    <tr>
      <th>Email</th>
      <td><%= @member.email %></td>
    </tr>
    <tr>
      <th>Semester</th>
      <td><%= @member.semester %></td>
    </tr>
    <tr>
      <th>Major</th>
      <td><%= @member.major %></td>
    </tr>
    <tr>
      <th>Committee</th>
      <td><%= @member.committee %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @member.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @member.updated_at %></td>
    </tr>
  </table>
  
</div>
