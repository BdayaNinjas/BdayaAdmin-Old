<% @page_title = "Create Member" %>

<%= link_to("<< Back to List", {:action => 'list'}, :class => 'back-link') %>

<div class="member new">
  <h2>Create Member</h2>

  <%= form_for(:member, :url => {:action => 'create'}) do |f| %>
  
	<table summary="Member form fields">
	  <tr>
	    <th><%= f.label(:name) %></th>
	    <td><%= f.text_field(:name) %></td>
	  </tr>
	  <tr>
	    <th><%= f.label(:email) %></th>
	    <td><%= f.text_field(:email) %></td>
	  </tr>
	  <tr>
	    <th><%= f.label(:committee) %></th>
	    <td><%= f.select(:committee, ['Yes', 'Care', 'Geneh', 'HR', 'PR', 'FR', 'Academics', 'IT']) %></td>
	  </tr>
	  <tr>
	    <th><%= f.label(:role) %></th>
	    <td><%= f.select(:role, ['Member', 'President', 'OC VP', 'Projects VP', 'FC VP', 'Head', 'Vice Head']) %></td>
	  </tr>
	</table>
    
    <div class="form-buttons">
      <%= submit_tag("Create Member") %>
    </div>
    
  <% end %>
</div>
