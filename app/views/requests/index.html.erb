</head>

<body>

  <div class="spreadsheet">

    <div class="spread-head">
      <!-- spreadsheet title -->
      <h1>Requests</h1>

      <!-- filter field -->
      <input value="filter..." />
    </div>

    <table>
      <thead>
        <tr>
          <th>Session Type</th>
          <th>Timing</th>
          <th>Requester</th>
          

        </tr>
      </thead>

      <tbody>
        <tr>
          <% @requests.each do |request| %>
          <tr>
            <%= form_for(request, :html => { :class => 'myForm'} ) do |f|%>

            <td>
              <%if (request.session_type = 1)%>
              <%= "Academics Session" %>
              <%elsif (request.session_type = 2)%>
              <%= "Yes Session" %>
              <%elsif (request.session_type = 3)%>
              <%= "Meeting" %>
              <%end%>
            </td>
            
            <td><%if (request.session_type = 1)%>
              <%= request.session.timing %>
              <%elsif (request.session_type = 3)%>
              <%= request.meeting.meeting_time %>
              <%end%>
            </td>
            
            <td>
              <%= request.needers[0].name %>  
            </td>

            <td>
            <%= link_to 'Assign Room', edit_request_path(request) %>
            </td>
            <td class="edit"><div class="edit"><div class="update-row">âœŽ</div></div>
          <%end%>
          </tr>
          <% end %>

          <!-- add this if row is editable -->

</td>
</tr>

</tbody>
</table>

<div class="spread-footer">
  <!-- tab, add this if table is editable -->
  <div class="tab edit-spreadsheet">Edit</div>
  <!-- keep buttons if edit is enabled -->
  <div class="btn green save">Save</div>
  <div class="btn red cancel">Cancel</div>
</div>
<br />


</div>

</body>
