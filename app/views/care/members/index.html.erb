<% @page_title = "Members List" %>

<div>
  <center><h2>Care</h2></center>
  <% if (@head.length>0) %>
  <h3>Head: <%= link_to(@head[0].name, {:action => 'show', :id => @head[0].id}) %></h3> 
  <%end%>
  <h3>Vices: <% @vices.each do |vice| %>
    <%= link_to(vice.name, {:action => 'show', :id => vice.id}) %>
    <%end%></h3> 
  <h3>Members</h3>

  <div><%= pluralize(@members.size, 'member') %> found</div>
  
  <table summary="Member list">
    <tr>
      <th>Member</th>
      <th>Email</th>
      <th>Semester</th>
      <th>Major</th>
      <% if(current_member.committee=='Care' && (current_member.role=='Head'||current_member.role=='Vice Head')) %>
      <th>Actions</th>
      <% end %>
    </tr>
    <% @members.each do |member| %>
    <tr>
      <td><%= link_to(member.name, {:action => 'show', :id => member.id}) %></td>
      <td><%= member.email %></td>
      <td><%= member.semester %></td>
      <td><%= member.major %></td>
      <td>
        <% if(current_member.email==member.email||(current_member.committee=='Care' && (current_member.role=='Head'||current_member.role=='Vice Head'))) %>
          <%= link_to("Edit", {:action => 'edit', :id => member.id}) %>
        <% end %>
        <% if(current_member.email!=member.email&&(current_member.committee=='Care' && (current_member.role=='Head'||current_member.role=='Vice Head')))%>
        <%= link_to("Delete", {:action => 'delete', :id => member.id}) %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </table>
</div>
