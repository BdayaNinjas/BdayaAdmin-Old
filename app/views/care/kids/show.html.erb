<% @page_title = "Show Kid: #{@kid.name}" %>

<%= link_to("<< Back to List", {:action => 'index'}) %>

<div>
  <h2>Show Kid</h2>

  <table summary="Kid detail view">
    <tr>
      <th>Name</th>
      <td><%= @kid.name %></td>
    </tr>
    <tr>
      <th>Age</th>
      <td><%= @kid.age %></td>
    </tr>
    <tr>
      <th>Address</th>
      <td><%= @kid.address %></td>
    </tr>
    <tr>
      <th>Strengths</th>
      <td><%= @kid.strengths %></td>
    </tr>
    <tr>
      <th>Weaknesses</th>
      <td><%= @kid.weaknesses %></td>
    </tr>
    <tr>
      <th>Notes</th>
      <td><%= @kid.notes %></td>
    </tr>
    <tr>
      <th>Created</th>
      <td><%= @kid.created_at %></td>
    </tr>
    <tr>
      <th>Updated</th>
      <td><%= @kid.updated_at %></td>
    </tr>
    <% if(current_member.committee=='Care' && (current_member.role=='Head'||current_member.role=='Vice Head')) %>
    <tr><td>
        <%= link_to("Edit", {:action => 'edit', :id => @kid.id}) %>
        <%= link_to("Delete", {:action => 'delete', :id => @kid.id}) %>
    </td></tr>
    <% end %>
  </table>
  
</div>
