<h1>New meeting</h1>

<%= form_for(@meeting) do |f| %>

  <% if @meeting.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@meeting.errors.count, "error") %> prohibited this meeting from being saved:</h2>

      <ul>
        <% @meeting.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :room %><br />
    <%= f.text_field :room %>
  </div>
  <div class="field">
    <%= f.label :attendee_ids %><br />
    <%= f.collection_select :attendee_ids, Member.order_by(:name.asc), :id, :name,{},{multiple: true} %>
  </div>
  <div class="field">
    <%= f.label :meeting_time %><br />
    <%= f.text_field :meeting_time %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= link_to 'Back', meetings_path %>
