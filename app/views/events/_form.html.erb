<%= form_for @event do |f| %> 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title, placeholder: "Title" %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date,class:"fn bday",id:"datepicker", placeholder:"Date" %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration, placeholder: "Duration" %>
  </div>
  <div class="field">
    <%= f.label :event_manager %>
    <%= f.collection_select :event_manager_id, @members, :id, :name, {}, { multiple: false } %>
  </div>
  <script type="text/javascript">
    $(function() {
      $( "#datepicker" ).datepicker({dateFormat:"yy-mm-dd"});
    });
  </script>
  <%= f.submit "Create event" %>
<% end %>