<link rel="stylesheet" href="http://code.jquery.com/ui/1.10.1/themes/base/jquery-ui.css" />
<script src="http://code.jquery.com/jquery-1.9.1.js"></script>
<script src="http://code.jquery.com/ui/1.10.1/jquery-ui.js"></script>
<%= form_for @event do |f| %> 
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error") %> prohibited this company from being saved:</h2>
      <ul>
      <% @event.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :date %>
    <%= f.text_field :date,class:"fn bday",id:"datepicker", placeholder:"Date" %>
  </div>
  <div class="field">
    <%= f.label :duration %>
    <%= f.text_field :duration, placeholder: "Duration" %>
  </div>
  <div class="field">
    <%= f.label :event_manager %>
        <%= f.collection_select :event_manager_id, @members, :id, :name, {}, { multiple: true } %>
  </div>
  <script type="text/javascript">
    $(function() {
      $( "#datepicker" ).datepicker();
    });
  </script>
  <%= f.submit "Create event" %>
<% end %>