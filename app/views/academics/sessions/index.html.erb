<head>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8">
  <title>Academics Sessions</title>

  <link href='http://fonts.googleapis.com/css?family=Roboto+Condensed' rel='stylesheet' type='text/css'>
  <script src="http://malsup.github.com/jquery.form.js"></script> 
  <script> 
  $(document).ready(function() { 
  $(".save").click(function() { 
    var $form = $('.myForm');
 $.ajax({
  type : "POST",
  cache : false,
  url : $form.attr('action'),
  data : $form.serializeArray(),
  success : function(data) {
    alert("helloooo!");
  }
  });

   });
  }); 
  </script>
</head>

<body>

  <div class="spreadsheet">

    <div class="spread-head">
      <!-- spreadsheet title -->
      <h1>Academics Sessions</h1>

      <!-- filter field -->
      <input value="filter..." />
    </div>

    <table>
      <thead>
        <tr>
          <th>Tutor</th>
          <th>Course</th>
          <th>Major</th>
          <th>Semester</th>
          <th>Timing</th>
          <th>Room</th>
          <th>Notes</th>
          
          

        </tr>
      </thead>

      <tbody>
        <tr>
          <% @sessions.each do |session| %>
          <tr>
            

            <td>
              <%= session.member.name %>
            </td>
            
            <td>
              <%= session.course.name %>
            </td>
            
            <td>
              <%= session.course.major %>  
            </td>

             <td>
              <%= session.course.semester %>  
            </td>

             <td>
              <%= session.timing %>               
            </td>

            <td>
              <%= session.request.room %>               
            </td>

            <td>
              <%= session.notes %>               
            </td>


            <td class="edit"><div class="edit"><div class="update-row">✎</div><div class="delete-row">✖</div></div>
          
          </tr>
          <% end %>

          <!-- add this if row is editable -->

</td>
</tr>

</tbody>
</table>

<div class="spread-footer">
  <!-- tab, add this if table is editable -->
  <div class="tab edit-spreadsheet">Edit</div>
  <!-- keep buttons if edit is enabled -->
  <div class="btn green save">Save</div>
  <div class="btn red cancel">Cancel</div>
</div>
<br />
<%= link_to 'New Session', new_academics_session_path %>


</div>

</body>
